<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xg">

    <ImageButton
        android:id="@+id/buttonDialogNext"
        android:layout_width="@dimen/end_dialog_controls_dim"
        android:layout_height="@dimen/end_dialog_controls_dim"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="110dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/xxxy" />

    <ImageButton
        android:id="@+id/buttonDialogHome"
        android:layout_width="@dimen/end_dialog_controls_dim"
        android:layout_height="@dimen/end_dialog_controls_dim"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDialogNext"
        app:layout_constraintEnd_toStartOf="@+id/buttonDialogNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonDialogNext"
        app:srcCompat="@drawable/xxy" />

    <ImageButton
        android:id="@+id/buttonDialogRetry"
        android:layout_width="@dimen/end_dialog_controls_dim"
        android:layout_height="@dimen/end_dialog_controls_dim"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDialogNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonDialogNext"
        app:layout_constraintTop_toTopOf="@+id/buttonDialogNext"
        app:srcCompat="@drawable/xxxxy" />

    <include
        layout="@layout/coins_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDialogNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>