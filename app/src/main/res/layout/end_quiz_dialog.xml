<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xg">

    <ImageButton
        android:id="@+id/buttonDialogNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/xxxy" />

    <ImageButton
        android:id="@+id/buttonDialogHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDialogNext"
        app:layout_constraintEnd_toStartOf="@+id/buttonDialogNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonDialogNext"
        app:srcCompat="@drawable/xxy" />

    <ImageButton
        android:id="@+id/buttonDialogRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDialogNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonDialogNext"
        app:layout_constraintTop_toTopOf="@+id/buttonDialogNext"
        app:srcCompat="@drawable/xxxxy" />

    <TextView
        android:id="@+id/textViewDialogMessage"
        android:layout_width="75dp"
        android:layout_height="44dp"
        android:autoSizeTextType="uniform"
        android:text="Score/...."
        app:layout_constraintBottom_toTopOf="@+id/buttonDialogNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>